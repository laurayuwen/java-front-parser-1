	to-kast-userlist:
		(a,[[hd | tl]]) -> $['[a]([<to-kast> hd],,
		               		      [<to-kast-userlist> (a, [tl])])]
		             
	to-kast-userlist:
		(a,[[]]) -> $[.[a]]
		//where debug(!"to-kast-user-0: ")

	to-kast:
		a#(b) -> $['[a](
				     [<to-kast-list> b]
				   ) ]
		where not(<string-starts-with(|"\"")> a)
		where not(!a => [])
		//where <debug(!"Term1: ")> (a, b)

	to-kast:
		a#(b) -> $[[<to-kast-list> b]]


	to-kast-list:
		[hd | tl] -> $[[<to-kast> hd],,
		               [[<to-kast-list> tl]]]
		where not(!tl => [])

	to-kast-list:
		[hd | tl] -> $[[<to-kast> hd]]
		where !tl => []

	to-kast-list:
		[] -> $[.KList]
		
		

	
		
		
		


