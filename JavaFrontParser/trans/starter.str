module starter

imports
  libstratego-sglr
  libstratego-lib
  libstratego-gpp
  libstratego-aterm
  include/JavaFrontParser

rules

	// compile like this:
	// lang -jar strategoxt.jar -i starter.str -o Ocl -la stratego-sglr --lib -I .. -p oclParser.lib --clean

 	langParse = ?[a, b] ; <parse-string(my-parse-error|<import-term(include/JavaFrontParser.tbl)>)> b ; (handleErrors <+ parsedJustFine2)

 	my-parse-error = id//debug(!"ParseError: ")
 	handleErrors =
		(?error(_,_) ; (to-xml-error <+ debug(!"Error: This should not happen. Please report.")))

	xmlStringEscapeToString = string-replace(|"&", "&amp;") ; string-replace(|">", "&gt;") ; string-replace(|"<", "&lt;") ; string-replace(|"\\\"", "&quot;")
	to-xml-error:
		error(a, b*) -> $[<?xml version="1.0" encoding="UTF-8" ?>
		<T>
			<error value="[<xmlStringEscapeToString>a]">
				[b']
			</error>
		</T>
		]
		where b' := <all(to-xml-error)> b*

	to-xml-error:
		localized(a, b) ->
			$[<localized message="[<xmlStringEscapeToString>a]" filename="[<xmlStringEscapeToString>x]" loc="[loc]" />
			]
		where (!b => (x, area(y1, y2, y3, y4, y5, y6))) <+ (!b => area-in-file(x, area(y1, y2, y3, y4, y5, y6)))
		where loc := <write-to-string> (y1, y2, y3, y4)



	my-open-error = id //debug(!"OpenError: ")
	my-parse-error = id //debug(!"ParseError: ")
	parsedJustFine:
		x -> $[<?xml version="1.0" encoding="UTF-8" ?>
			<T>
				[<to-xml> x]
			</T>]

	getLocAsString        = (prim("SSL_EXT_origin_location", <id>) ; write-to-string) <+ !"(0,0,0,0)"

	to-xml:
		a#(b) -> $[<term cons="[a]" loc="[loc]">
					[<all(to-xml)> b]
			</term>
		]
		where not(<string-starts-with(|"\"")> a)
		where not(!a => [])
		where loc := <getLocAsString>
		//where <debug(!"Term1: ")> (a, b)

	to-xml:
		x#(b) -> $[<terminal value=[x] loc="[loc]"/>
		]
		where <string-starts-with(|"\"")> x
		where loc := <getLocAsString>
		//where debug(!"Term2: ")

	to-xml:
		x -> $[<list loc="[loc]">
				[<all(to-xml)> x]
		</list>
		]
		where loc := <getLocAsString>
		//where debug(!"Term3: ")


// -------------------------------------------------------------


	parsedJustFine2:
		x -> $[[rez]]
		where rez := <to-kast> x

	to-kast:
		x -> $[# "[<escape> x]"(.KList)]
		where <is-string> x

	to-kast:
		x -> $[# [x](.KList)]
		where <is-int> x
	
	
   to-kast:
    	ExprList(b) -> $[ [<to-kast-Exprlist> b] ]	
   
   
   to-kast-Exprlist:
   		[hd | tl] -> $['_,_([<to-kast> hd],, 
   						[<to-kast-Exprlist> tl])]
   						
   to-kast-Exprlist:
   		[] -> $[.Exps]
   		
   		
   to-kast:
    	DimExprList(b) -> $[ [<to-kast-DimExprlist> b] ]	
   
   
   to-kast-DimExprlist:
   		[hd | tl] -> $['__([<to-kast> hd],, 
   						[<to-kast-DimExprlist> tl])]
   						
   to-kast-DimExprlist:
   		[] -> $[.DimExps]
   		
   		
   to-kast:
    	DimList(b) -> $[ [<to-kast-Dimlist> b] ]	
   
   
   to-kast-Dimlist:
   		[hd | tl] -> $['__([<to-kast> hd],, 
   						[<to-kast-Dimlist> tl])]
   						
   to-kast-Dimlist:
   		[] -> $[.Dims]
   		
   		
   to-kast:
    	CatchClauseList(b) -> $[ [<to-kast-CatchClauseList> b] ]	
   
   
   to-kast-CatchClauseList:
   		[hd | tl] -> $['__([<to-kast> hd],, 
   						[<to-kast-CatchClauseList> tl])]
   						
   to-kast-CatchClauseList:
   		[] -> $[.CatchClauses]
   		
   		
   to-kast:
    	FormalParamList(b) -> $[ [<to-kast-paramlist> b] ]	
   
   
   to-kast-paramlist:
   		[hd | tl] -> $['_,_([<to-kast> hd],, 
   						[<to-kast-paramlist> tl])]
   						
   to-kast-paramlist:
   		[] -> $[.Params]
   		
   		
   		
   to-kast:
    	VarInitList(b) -> $[ [<to-kast-VarInitlist> b] ]	
   
   
   to-kast-VarInitlist:
   		[hd | tl] -> $['_,_([<to-kast> hd],, 
   						[<to-kast-VarInitlist> tl])]
   						
   to-kast-VarInitlist:
   		[] -> $[.VarInits]
   		
   		
	to-kast:
